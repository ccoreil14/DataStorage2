<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="drawapptutorial.com.example.thatwaseasy_twe.MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:id="@+id/TaskList"
        android:background="#DDD"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Add Task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addBtn"
            android:layout_weight="1"
            android:contextClickable="true" />

        <RadioGroup android:layout_height="wrap_content"
            android:layout_width="385dp"
            android:orientation='horizontal'
            android:id="@+id/sortRadiosBtns"
            android:paddingTop="10px">

            <RadioButton
                android:text="Priority"
                android:layout_height="wrap_content"
                android:id="@+id/sortUrgencyBtn"
                android:layout_weight="0.72"
                android:layout_width="wrap_content" />

            <RadioButton
                android:text="Alphabetical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sortAlphabeticalBtn"
                android:layout_weight="0.72" />

            <RadioButton
                android:text="Most Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sortMostTimeBtn"
                android:layout_weight="0.72" />

            <RadioButton
                android:text="Least Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sortLeastTimeBtn"
                android:layout_weight="0.72" />

        </RadioGroup>

    </LinearLayout>
</RelativeLayout>
